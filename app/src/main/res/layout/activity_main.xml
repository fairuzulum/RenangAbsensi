<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F8FB"
    tools:context=".ui.home.MainActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="Selamat Datang,"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvSubtitle"
        app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        android:text="Silakan kelola data absensi Anda."
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintBottom_toTopOf="@id/cardAbsensi"/>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardAbsensi"
        style="@style/MainMenuCard"
        app:layout_constraintBottom_toTopOf="@+id/cardRegister"
        app:layout_constraintEnd_toStartOf="@+id/cardPembayaran"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <LinearLayout style="@style/MainMenuContent">
            <ImageView
                style="@style/MainMenuIcon"
                android:src="@drawable/ic_attendance" />
            <TextView
                style="@style/MainMenuText"
                android:text="Absensi" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardPembayaran"
        style="@style/MainMenuCard"
        app:layout_constraintBottom_toBottomOf="@id/cardAbsensi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardAbsensi"
        app:layout_constraintTop_toTopOf="@id/cardAbsensi">

        <LinearLayout style="@style/MainMenuContent">
            <ImageView
                style="@style/MainMenuIcon"
                android:src="@drawable/ic_payment" />
            <TextView
                style="@style/MainMenuText"
                android:text="Pembayaran" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardRegister"
        style="@style/MainMenuCard"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/cardFinancial"
        app:layout_constraintEnd_toStartOf="@+id/cardListSiswa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardAbsensi">

        <LinearLayout style="@style/MainMenuContent">
            <ImageView
                style="@style/MainMenuIcon"
                android:src="@drawable/ic_register" />
            <TextView
                style="@style/MainMenuText"
                android:text="Register Siswa" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardListSiswa"
        style="@style/MainMenuCard"
        app:layout_constraintBottom_toBottomOf="@id/cardRegister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardRegister"
        app:layout_constraintTop_toTopOf="@id/cardRegister">

        <LinearLayout style="@style/MainMenuContent">
            <ImageView
                style="@style/MainMenuIcon"
                android:src="@drawable/ic_student_list" />
            <TextView
                style="@style/MainMenuText"
                android:text="List Siswa" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardFinancial"
        style="@style/MainMenuCard"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardRegister"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.4">

        <LinearLayout style="@style/MainMenuContent">
            <ImageView
                style="@style/MainMenuIcon"
                android:src="@drawable/ic_finance" />
            <TextView
                style="@style/MainMenuText"
                android:text="Keuangan" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>