<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.AbsenRenang" parent="Theme.Material3.Light.NoActionBar">
    </style>

    <style name="Theme.AbsenRenang" parent="Base.Theme.AbsenRenang" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/soft_blue</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_renang</item>
        <item name="postSplashScreenTheme">@style/Theme.AbsenRenang</item>
    </style>

    <style name="ThemeOverlay.Material3.MaterialAlertDialog.Centered" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:gravity">center</item>
    </style>

    <style name="MainMenuCard" parent="Widget.Material3.CardView.Elevated">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
    </style>

    <style name="MainMenuContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="MainMenuIcon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="tint">@color/primary_blue</item>
    </style>

    <style name="MainMenuText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>